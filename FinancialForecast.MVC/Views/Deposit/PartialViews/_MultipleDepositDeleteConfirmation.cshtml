<div id="multipleDepositDeletionConfirmation" class="modal fade" role="dialog" tabindex="-1">
    <div class="modal-dialog modal-xl" style="max-width:900px">
        <div class="modal-content">
            <div class="modal-header bg-warning">
                <h4 class="modal-title"><i class="fas fa-exclamation-circle"></i> Are you sure you want to delete all of these deposits?</h4>
            </div>
            <div class= "modal-body">
                <div class="table-responsive" style="max-height:350px">
                    <table class="table table-sm table-hover table-striped">
                        <thead class="thead-dark">
                            <tr>
                                <th v-for="col in columns" v-if="col !== 'id' && col !== 'UserID'">                               
                                    {{col}}                            
                                </th>
                            </tr>
                        </thead>
                        <tbody>
                            <tr v-for="Deposit in recurringDeposits">
                                <td v-for="col in columns" v-if="col !== 'id' && col !== 'UserID'" v-bind:type="Deposit[col] == 'Active' ? 'checkbox': 'text'">
                                    <input type="checkbox" v-bind:checked = "Deposit['Active'] == true" v-if ="col == 'Active'" disabled />
                                    <input type="checkbox" v-bind:checked = "Deposit['Recurring'] == true" v-if ="col == 'Recurring'" disabled />
                                    <div v-if="col != 'Active' && col != 'Recurring'">{{Deposit[col]}}</div>
                                </td>
                            </tr>
                        </tbody>
                    </table>
                </div>
            </div>
            <div class="modal-footer">
                <div class="col-12 text-right">
                    <button type="submit" @@click="deleteMultipleDeposits()" class="btn btn-success" data-dismiss="modal"><i class="fas fa-check"></i> Yes</button>
                    <button type="button" class="btn btn-danger" data-dismiss="modal"><i class="fas fa-times"></i> No</button>
                </div>
            </div>
        </div>
    </div>
</div>