@{
    ViewData["Title"] = "Financial Forecast";
}

<div id="Forecast">
    <div class="row">
        <div id="alert" class="alert fade-appear col-12 form-centered" v-bind:class="errorMessage ? 'alert-danger' : 'alert-success'" v-if="alertMessage">
            <a href="#" class="close" data-dismiss="alert" aria-label="close">&times;</a>
            {{alertMessage}}
        </div>
    </div>
    <div class="row">
         <div class="col-sm-2" style="text-align:center">
                <label>Date Range:</label>
                <select v-model="SelectedDateID" class="form-select Date">
                    <option v-for="option in options" v-bind:value="option.id">
                        {{ option.text }}
                    </option>
                </select>
            </div>
            <div class="col-sm-2" style="text-align:center">               
                <label>Start Date:</label>
                <input type="date" v-model="startDate" class="form-control" />                                         
            </div>
            <div class="col-sm-2" style="text-align:center">               
                    <label>End Date:</label>
                    <input type="date" v-model="endDate" class="form-control" />                                            
            </div>
    </div>
    <div class="row">
        <div class="col-sm-3">
             <label>Today's Amount:</label>
            <input class="form-control" type="text" placeholder="Today's Amount" v-model="OrderNumber" />
        </div>
    </div>
    <div class="row">
        <div class="col-12">
            <div class="table-responsive">
                <table class="table table-sm table-hover table-striped">
                    <thead class="thead-dark">
                        <tr>
                            <th v-for="col in columns">
                                {{col}}
                            </th>
                        </tr>
                    </thead>
                    <tbody>
                        <tr v-for="item in getAccountDetails()" v-on:click="ItemClicked(Item)" :class="{'row-highlight': (Item == selectedItem)}">
                            <td v-for="col in columns">
                                <input type="checkbox" v-bind:checked="Item['Scheduled'] == true" v-if="col == 'Scheduled'" disabled />
                                <div v-if="col != 'Scheduled'">{{Item[col]}}</div>
                            </td>                 
                        </tr>
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>

