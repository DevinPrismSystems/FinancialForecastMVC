@model FinancialForecast.MVC.Models.LoginViewModel
@{
    ViewBag.Title = "Register Here";
    //Layout = "~/Views/Shared/_LoginPartial.cshtml";
}

<div class="d-flex justify-content-center h-100 mt-5" id="Register">
    <div class="card w-40 border-0 shadow p-3 mb-5 bg-white rounded">
        <div class="card-header bg-transparent border-0">
            <div class="d-flex justify-content-center">
                <img src="@Url.Content("~/Dollar.jpg")" class="brand_logo" alt="Logo" width="400" />
            </div>
        </div>
        <div class="card-body bg-transparent border-0">
            @using (Html.BeginForm("Register", "Account", new { ReturnUrl = ViewBag.ReturnUrl }, FormMethod.Post, true, new {@class = "form-signin" }))
            {
                @Html.AntiForgeryToken()
                <div asp-validation-summary="All" class="text-danger"></div>
                <div class="input-group mb-3">
                    <div class="input-group-append">
                        <span class="input-group-text bg-primary" style="padding:0.66rem"><i class="fas fa-user text-white"></i></span>
                    </div>
                    @Html.TextBoxFor(m => m.Username, new { @class = "form-control", @placeholder = Html.DisplayNameFor(m => m.Username), @required = "", @autofocus = "", @v_model = "username" })
                </div>
                <div class="input-group mb-2">
                    <div class="input-group-append">
                        <span class="input-group-text bg-primary" style="padding:0.66rem"><i class="fas fa-key text-white"></i></span>
                    </div>
                    @Html.PasswordFor(m => m.Password, new { @class = "form-control", @placeholder = Html.DisplayNameFor(m => m.Password), @required = "" })
                </div>

                <div class="d-flex justify-content-center mt-1">
                    <form action="/Account/Register" method="post">
                        <button asp-action="Register" type="submit" asp-controller="Account" class="btn btn-success"><i class="fas fa-sign-in-alt"></i> Register Account </button>                        
                     </form>
@*                    <button type="submit" form="webLogin" class="btn btn-primary"><i class="fas fa-sign-in-alt"></i> Register Account </button>
                    <input type="hidden" value="@ViewBag.ReturnUrl" name="returnUrl" />*@
                </div>
                <div class="text-left text-danger">
                    @ViewBag.Error
                    @Html.ValidationSummary()
                </div>
            }
        </div>
    </div>
</div>


@section Scripts{
    <script>
        var baseURL = '@System.Configuration.ConfigurationManager.AppSettings["BaseURL"]';
    </script>
